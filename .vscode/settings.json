{
    "//comment_python": "PythonSettings",
    "python.formatting.provider": "none",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
    "//comment_pylance": "PylanceSettings",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.diagnosticMode": "workspace",
    "//comment_flake8": "Flake8Settings",
    "flake8.args": [
        "--max-line-length=120",
        "--ignore=E203"
    ],
    "//comment_pylint": "PylintSettings",
    "pylint.args": [
        "disable=line-too-long",
        "too-many-return-statements",
        "logging-fstring-interpolation"
    ],
    "//comment_isort": "IsortSettings",
    "isort.args": [
        "--profile=black"
    ],
    "//comment_black": "BlackSettings",
    "black-formatter.args": [
        "--line-length=120"
    ],
    "//commend_editor": "EditorSettings",
    "editor.formatOnSaveMode": "file",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "editor.defaultFormatter": "ms-python.black-formatter",
}